<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listing_distance_cell_height"
    android:layout_marginEnd="@dimen/listing_item_margin_horizontal"
    android:layout_marginLeft="@dimen/listing_item_margin_horizontal"
    android:layout_marginRight="@dimen/listing_item_margin_horizontal"
    android:layout_marginStart="@dimen/listing_item_margin_horizontal">

    <TextView
        android:id="@+id/distance"
        style="@style/Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/filter"
        android:layout_toStartOf="@+id/filter"
        android:ellipsize="end"
        android:lines="1"
        />

    <TextView
        android:id="@+id/filter"
        style="@style/Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/listing_filter_cell_margin_left"
        android:layout_marginStart="@dimen/listing_filter_cell_margin_left"
        android:text="@string/listing_filter_cell"
        />
</RelativeLayout>