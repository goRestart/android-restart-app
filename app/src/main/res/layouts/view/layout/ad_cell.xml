<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/listing_ad_cell_image_margin_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/listing_ad_cell_image_container_width"
        android:layout_height="@dimen/listing_ad_cell_image_container_height">

        <ImageView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listing_ad_cell_image_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/listing_ad_cell_image_margin_bottom"
            android:background="@color/ash"
            />

        <TextView
            android:id="@+id/platform"
            style="@style/Platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/listing_ad_cell_platform_tag_margin_left"
            android:layout_marginStart="@dimen/listing_ad_cell_platform_tag_margin_left"
            android:background="@drawable/platform_tag_background"
            android:paddingBottom="@dimen/listing_ad_cell_platform_tag_padding_vertical"
            android:paddingEnd="@dimen/listing_ad_cell_platform_tag_padding_horizontal"
            android:paddingLeft="@dimen/listing_ad_cell_platform_tag_padding_horizontal"
            android:paddingRight="@dimen/listing_ad_cell_platform_tag_padding_horizontal"
            android:paddingStart="@dimen/listing_ad_cell_platform_tag_padding_horizontal"
            android:paddingTop="@dimen/listing_ad_cell_platform_tag_padding_vertical"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listing_ad_cell_title_margin_top"
        />

    <TextView
        android:id="@+id/price"
        style="@style/Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>