<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="@dimen/listing_search_cell_height"
        android:layout_marginEnd="@dimen/listing_search_cell_margin_horizontal"
        android:layout_marginLeft="@dimen/listing_search_cell_margin_horizontal"
        android:layout_marginRight="@dimen/listing_search_cell_margin_horizontal"
        android:layout_marginStart="@dimen/listing_search_cell_margin_horizontal"
        android:layout_marginTop="@dimen/listing_search_cell_margin_top"
        android:background="@color/ash"
        app:iconifiedByDefault="false"
        app:queryBackground="@color/ash"
        app:queryHint="@string/listing_query_hint"
        />

</LinearLayout>