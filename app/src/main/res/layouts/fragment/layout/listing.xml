<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/listing_padding_horizontal"
        android:paddingLeft="@dimen/listing_padding_horizontal"
        android:paddingRight="@dimen/listing_padding_horizontal"
        android:paddingStart="@dimen/listing_padding_horizontal"
        />

</FrameLayout>