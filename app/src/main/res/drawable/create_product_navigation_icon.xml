<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size
                android:width="@dimen/create_ad_navigation_icon_size"
                android:height="@dimen/create_ad_navigation_icon_size"/>
            <corners android:radius="@dimen/create_ad_navigation_icon_corner_radius"/>
            <gradient
                android:angle="-90"
                android:endColor="@color/purplish_blue"
                android:startColor="@color/electric_purple"
                android:type="linear"/>
        </shape>
    </item>
    <item
        android:bottom="@dimen/create_ad_navigation_icon_padding"
        android:drawable="@drawable/create_ad_navigation_icon_selected"
        android:gravity="center"
        android:left="@dimen/create_ad_navigation_icon_padding"
        android:right="@dimen/create_ad_navigation_icon_padding"
        android:top="@dimen/create_ad_navigation_icon_padding"/>
</layer-list>
