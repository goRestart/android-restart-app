<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="@dimen/button_alt_primary_horizontal_padding"
                android:right="@dimen/button_alt_primary_horizontal_padding">
                <shape>
                    <corners android:radius="@dimen/button_alt_primary_radius"/>
                    <stroke
                        android:width="@dimen/button_alt_border_width"
                        android:color="@color/warm_grey"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="@dimen/button_alt_primary_radius"/>
                    <stroke
                        android:width="@dimen/button_alt_border_width"
                        android:color="@color/dark_grey"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>