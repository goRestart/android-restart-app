<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:bottom="@dimen/button_alt_primary_small_vertical_padding"
                android:left="@dimen/button_alt_primary_horizontal_padding"
                android:right="@dimen/button_alt_primary_horizontal_padding"
                android:top="@dimen/button_alt_primary_small_vertical_padding">
                <shape>
                    <corners android:radius="@dimen/button_alt_primary_small_radius"/>
                    <stroke
                        android:width="@dimen/button_alt_primary_border_width"
                        android:color="@color/purplish_blue"/>
                    <solid android:color="@color/purplish_blue_15_alpha"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item
                android:bottom="@dimen/button_alt_primary_small_vertical_padding"
                android:top="@dimen/button_alt_primary_small_vertical_padding">
                <shape>
                    <corners android:radius="@dimen/button_alt_primary_small_radius"/>
                    <solid android:color="@color/purplish_blue_10_alpha"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>