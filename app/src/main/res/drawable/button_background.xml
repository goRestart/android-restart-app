<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="180"
                android:endColor="@color/dark_purplish_blue"
                android:startColor="@color/darker_purplish_blue"
                android:type="linear"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/dark_grey"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="180"
                android:endColor="@color/electric_purple"
                android:startColor="@color/purplish_blue"
                android:type="linear"
                />
        </shape>
    </item>
</selector>
