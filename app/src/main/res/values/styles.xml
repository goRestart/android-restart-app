<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/header</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Price" parent="Regular">
        <item name="android:textColor">@color/purplish_blue</item>
    </style>

    <style name="Distance" parent="Subtitle">
        <item name="android:textColor">@color/purplish_blue</item>
    </style>

    <style name="Tag">
        <item name="android:textColor">@color/purplish_blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:capitalize">characters</item>
        <item name="android:background">@drawable/tag_button_background</item>
        <item name="android:paddingBottom">@dimen/tag_padding_vertical</item>
        <item name="android:paddingTop">@dimen/tag_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/tag_padding_horizontal</item>
    </style>

    <style name="Button"/>

    <style name="Button.Alt"/>

    <style name="Button.Alt.Primary">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/narrow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_alt_small_primary</item>
        <item name="android:textColor">@color/purplish_blue</item>
        <item name="android:paddingTop">@dimen/button_alt_primary_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_alt_primary_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/button_alt_primary_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_alt_primary_padding_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Platform">
        <item name="android:textColor">@color/rainy</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">characters</item>
        <item name="android:paddingLeft">@dimen/platform_tag_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/platform_tag_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/platform_tag_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/platform_tag_padding_vertical</item>
        <item name="android:background">@drawable/platform_tag_background</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/rainy</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PositiveButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/narrow</item>
    </style>

    <style name="LocationTag">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/regular</item>
        <item name="android:textColor">@color/black_two</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
